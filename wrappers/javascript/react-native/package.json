{
  "name": "indy-credx-react-native",
  "version": "0.0.3",
  "license": "Apache-2.0",
  "description": "React Native wrapper for Indy Credx",
  "main": "build/index",
  "source": "src/index",
  "homepage": "https://github.com/hyperledger/indy-credx/tree/main/wrappers/javascript/react-native",
  "author": "Hyperledger (https://github.com/hyperledger)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/indy-credx",
    "directory": "wrappers/javascript/react-native"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build",
    "android/src",
    "android/libs",
